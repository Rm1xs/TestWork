@model IEnumerable<TestWork.EF.History>

@{
    ViewBag.Title = "History";
}
<table class="table">
    <tr>
        <th>
            URL
        </th>
        <th>
            Date
        </th>
        <th>
            Duration
        </th>
        <th>
            Slowes
        </th>
        <th>
            Fastest
        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (!item.URL.Contains(".xml"))
        {
            <tr style="color:peru">
                <td>
                    @Html.DisplayFor(modelItem => item.URL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCheck)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeForCheck) sec.
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxValue) msec.
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinValue) msec.
                </td>
                <td>
                    <a href=@Url.Action("Details", "Home", new RouteValueDictionary { { "Id", @Html.DisplayFor(modelItem => item.Id) } }, Request.Url.Scheme, Request.Url.Host)>More info</a>
                </td>
            </tr>
        }
        else
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.URL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCheck)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeForCheck) sec.
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxValue) msec.
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinValue) msec.
                </td>
                <td>
                    <a href=@Url.Action("Details", "Home", new RouteValueDictionary { { "Id", @Html.DisplayFor(modelItem => item.Id) } }, Request.Url.Scheme, Request.Url.Host)>More info</a>
                </td>
            </tr>
        }
    }

</table>
<hr />
<div class="col"><em style="color:peru">•</em> - <em>SiteMap generated by program</em></div>
<br />
<div class="col"><em style="color:black">•</em> - <em>SiteMap taken directly from the site</em></div>


